section#overview
  .form-group.mt-5
    .row.text-center
      .col-3
        .border.rounded.m-3.p-3
          p.uppercase
            i.fas.fa-user-ninja
            strong.ml-1 Owner
          p.mb-0 #{guild.owner.user.tag}
      .col-3
        .border.rounded.m-3.p-3
          p.uppercase
            i.fas.fa-user-alt
            strong.ml-1 Members
          p.mb-0 #{guild.memberCount}
      .col-3
        .border.rounded.m-3.p-3
          p.uppercase
            i.fas.fa-at
            strong.ml-1 Roles
          p.mb-0 #{guild.roles.cache.size}
      .col-3
        .border.rounded.m-3.p-3
          p.uppercase
            i.fas.fa-hashtag
            strong.ml-1 Channels
          p.mb-0 #{guild.channels.cache.size}